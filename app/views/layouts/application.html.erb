<!DOCTYPE html>
<html>
  <head>
    <title>Funnymovies</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <style>
    @media screen and (max-width: 700px) { .column { width: 100%; } }
    </style>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-5">
          <h1 style="font-size:5vw">Funny Movies</h1>
        </div>
        <div class="col" style="align-self: center; transform: translateX(35%);">
          <% if current_user %>
            <%= "Welcome #{current_user.email}" %>
            <%= link_to 'Share a movie', new_movies_share_path, class: "btn btn-primary btn-sm" %>
            <%= link_to 'Log Out', logout_path,  class: "btn btn-primary btn-sm"%>
          <%else%>
            <%= form_tag sessions_path do |form| %>                          
              <%= text_field_tag :email, nil, placeholder: 'email' %>              
              <%= password_field_tag :password, nil, placeholder: 'password' %>
              <%= submit_tag "Login/Register", class: "btn btn-primary btn-sm" %>  
            <% end %>
          <% end %> 
        </div>  
      </div>
      <hr style="background-color:black; height:2px">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
